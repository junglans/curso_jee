<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="CursoPU" transaction-type="JTA">
        <jta-data-source>jdbc/CursoDS</jta-data-source>
        <properties>
            <property name="eclipselink.canonicalmodel.subpackage" value="prod"/>
            <property name="eclipselink.logging.level.sql" value="FINE"></property>
            <property name="eclipselink.logging.parameters" value="true"></property>
        </properties>
    </persistence-unit>
    <persistence-unit name="CursoLocalPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>com.jfjp.jee.sga.domain.entities.PersonEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/curso_jee?useSSL=false"></property>
            <property name="javax.persistence.jdbc.user" value="root"></property>
            <property name="javax.persistence.jdbc.password" value="admin"></property>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"></property>
            <property name="eclipselink.logging.level.sql" value="FINE"></property>
            <property name="eclipselink.logging.parameters" value="true"></property>
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.canonicalmodel.subpackage" value="dev"/>
        </properties>
    </persistence-unit>
</persistence>
